{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "stream": true,
  "command": {
    "publish": {
      "allowBranch": ["master", "release"],
      "message": "chore(release): publish release %s",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/__test__/**",
        "**/*.{md,mdx}",
        "**/*.spec.ts",
        "LICENSE"
      ],
      "no-private": true
    }
  }
}
