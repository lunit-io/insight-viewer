{
  "name": "frontend-components",
  "version": "1.0.0",
  "repository": "https://github.com/lunit-io/frontend-components.git",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": []
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "build": "lerna run build",
    "build:insight-viewer": "lerna run --scope @lunit/insight-viewer build",
    "build:osd-react-renderer": "lerna run --scope @lunit/osd-react-renderer build",
    "test": "lerna run test",
    "handbook:build": "yarn clean & yarn run doc",
    "clean": "rm -rf ./out/handbook",
    "doc": "yarn run build:insight-viewer && lerna run --scope @lunit/insight-viewer-demo doc",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.8",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@yarnpkg/pnpify": "^2.4.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "lerna": "4.0.0",
    "lint-staged": "^10.0.8",
    "node-filter-async": "^2.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
